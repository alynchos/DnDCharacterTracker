<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Stats -->
    <EditText
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:hint="strength"
        android:id="@+id/edit_strength"
        android:inputType="number"/>
    <EditText
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:hint="dexterity"
        android:id="@+id/edit_dexterity"
        android:layout_below="@id/edit_strength"
        android:inputType="number"/>
    <EditText
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:hint="constitution"
        android:id="@+id/edit_constitution"
        android:layout_below="@id/edit_dexterity"
        android:inputType="number"/>
    <EditText
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:hint="intelligence"
        android:id="@+id/edit_intelligence"
        android:layout_below="@id/edit_constitution"
        android:inputType="number"/>
    <EditText
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:hint="wisdom"
        android:id="@+id/edit_wisdom"
        android:layout_below="@id/edit_intelligence"
        android:inputType="number"/>
    <EditText
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:hint="charisma"
        android:id="@+id/edit_charisma"
        android:layout_below="@id/edit_wisdom"
        android:inputType="number"/>
    <!-- *************************************************************************************** -->
    <!-- Proficiencies -->
    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="proficiency"
        android:id="@+id/edit_proficiency"
        android:layout_toRightOf="@id/edit_strength"
        android:inputType="number"
        android:imeOptions="actionDone"/>

    <CheckBox
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Acrobatics"
        android:id="@+id/check_acrobatics"
        android:layout_below="@+id/edit_proficiency"
        android:layout_toRightOf="@+id/edit_dexterity"
        android:layout_toEndOf="@+id/edit_dexterity"
        android:textSize="10dp"/>
    <CheckBox
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Animal Handling"
        android:id="@+id/check_animal_handling"
        android:layout_below="@+id/check_acrobatics"
        android:layout_toRightOf="@+id/edit_dexterity"
        android:layout_toEndOf="@+id/edit_dexterity"
        android:textSize="10dp"/>
    <CheckBox
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Arcana"
        android:id="@+id/check_arcana"
        android:layout_below="@+id/check_animal_handling"
        android:layout_toRightOf="@+id/edit_dexterity"
        android:layout_toEndOf="@+id/edit_dexterity"
        android:textSize="10dp"/>
    <CheckBox
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Athletics"
        android:id="@+id/check_athletics"
        android:layout_below="@+id/check_arcana"
        android:layout_toRightOf="@+id/edit_dexterity"
        android:layout_toEndOf="@+id/edit_dexterity"
        android:textSize="10dp"/>
    <CheckBox
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Deception"
        android:id="@+id/check_deception"
        android:layout_below="@+id/check_athletics"
        android:layout_toRightOf="@+id/edit_dexterity"
        android:layout_toEndOf="@+id/edit_dexterity"
        android:textSize="10dp"/>
    <CheckBox
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="History"
        android:id="@+id/check_history"
        android:layout_below="@+id/check_deception"
        android:layout_toRightOf="@+id/edit_dexterity"
        android:layout_toEndOf="@+id/edit_dexterity"
        android:textSize="10dp"/>
    <CheckBox
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Insight"
        android:id="@+id/check_insight"
        android:layout_below="@+id/check_history"
        android:layout_toRightOf="@+id/edit_dexterity"
        android:layout_toEndOf="@+id/edit_dexterity"
        android:textSize="10dp"/>
    <CheckBox
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Intimidation"
        android:id="@+id/check_intimidation"
        android:layout_below="@+id/check_insight"
        android:layout_toRightOf="@+id/edit_dexterity"
        android:layout_toEndOf="@+id/edit_dexterity"
        android:textSize="10dp"/>
    <CheckBox
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Investigation"
        android:id="@+id/check_investigation"
        android:layout_below="@+id/check_intimidation"
        android:layout_toRightOf="@+id/edit_dexterity"
        android:layout_toEndOf="@+id/edit_dexterity"
        android:textSize="10dp"/>
    <!--***** SPLIT *****-->
    <CheckBox
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Medicine"
        android:id="@+id/check_medicine"
        android:layout_below="@+id/edit_proficiency"
        android:layout_toRightOf="@+id/check_acrobatics"
        android:layout_toEndOf="@+id/check_acrobatics"
        android:textSize="10dp"/>
    <CheckBox
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Nature"
        android:id="@+id/check_nature"
        android:layout_below="@+id/check_medicine"
        android:layout_toRightOf="@+id/check_acrobatics"
        android:layout_toEndOf="@+id/check_acrobatics"
        android:textSize="10dp"/>
    <CheckBox
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Perception"
        android:id="@+id/check_perception"
        android:layout_below="@+id/check_nature"
        android:layout_toRightOf="@+id/check_acrobatics"
        android:layout_toEndOf="@+id/check_acrobatics"
        android:textSize="10dp"/>
    <CheckBox
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="Performance"
        android:id="@+id/check_performance"
        android:layout_below="@+id/check_perception"
        android:layout_toRightOf="@+id/check_acrobatics"
        android:layout_toEndOf="@+id/check_acrobatics"
        android:textSize="10dp"/>
    <CheckBox
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Persuasion"
        android:id="@+id/check_persuasion"
        android:layout_below="@+id/check_performance"
        android:layout_toRightOf="@+id/check_acrobatics"
        android:layout_toEndOf="@+id/check_acrobatics"
        android:textSize="10dp"/>
    <CheckBox
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Religion"
        android:id="@+id/check_religion"
        android:layout_below="@+id/check_persuasion"
        android:layout_toRightOf="@+id/check_acrobatics"
        android:layout_toEndOf="@+id/check_acrobatics"
        android:textSize="10dp"/>
    <CheckBox
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Sleight of Hand"
        android:id="@+id/check_sleight_of_hand"
        android:layout_below="@+id/check_religion"
        android:layout_toRightOf="@+id/check_acrobatics"
        android:layout_toEndOf="@+id/check_acrobatics"
        android:textSize="10dp"/>
    <CheckBox
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Stealth"
        android:id="@+id/check_stealth"
        android:layout_below="@+id/check_sleight_of_hand"
        android:layout_toRightOf="@+id/check_acrobatics"
        android:layout_toEndOf="@+id/check_acrobatics"
        android:textSize="10dp"/>
    <CheckBox
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Survival"
        android:id="@+id/check_survival"
        android:layout_below="@+id/check_stealth"
        android:layout_toRightOf="@+id/check_acrobatics"
        android:layout_toEndOf="@+id/check_acrobatics"
        android:textSize="10dp"/>

    <!-- *************************************************************************************** -->

    <!-- Saving Throws -->
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Str"
        android:id="@+id/check_save_str"
        android:layout_below="@+id/edit_charisma"
        android:layout_alignParentLeft="true"
        android:textSize="10dp"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dex"
        android:id="@+id/check_save_dex"
        android:layout_below="@+id/check_save_str"
        android:layout_alignParentLeft="true"
        android:textSize="10dp"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Con"
        android:id="@+id/check_save_con"
        android:layout_below="@+id/check_save_dex"
        android:layout_alignParentLeft="true"
        android:textSize="10dp"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Int"
        android:id="@+id/check_save_int"
        android:layout_below="@+id/edit_charisma"
        android:layout_toRightOf="@+id/check_save_str"
        android:textSize="10dp"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wis"
        android:id="@+id/check_save_wis"
        android:layout_below="@+id/check_save_int"
        android:layout_toRightOf="@+id/check_save_str"
        android:textSize="10dp"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chr"
        android:id="@+id/check_save_chr"
        android:layout_below="@+id/check_save_wis"
        android:layout_toRightOf="@+id/check_save_str"
        android:textSize="10dp"/>

</RelativeLayout>
