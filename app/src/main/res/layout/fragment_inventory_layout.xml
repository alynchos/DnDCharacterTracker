<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/light_tan"
    tools:context="com.dnd.alynchos.dndcharactertracker.Items.InventoryFragment">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_inventory_add"
        android:text="@string/inventory_add_item"
        android:layout_below="@+id/inv_header_inc"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/small_font"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_inventory_delete"
        android:text="@string/inventory_delete_all"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/inv_header_inc"
        android:textSize="@dimen/small_font"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inventory_list"
        android:layout_below="@id/button_inventory_delete"
        android:layout_centerHorizontal="true" />

    <!-- Proficiency -->
    <include layout="@layout/inventory_footer_hud"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_margin="3dp"
        android:layout_alignParentTop="true"
        android:id="@+id/inv_header_inc"/>

</RelativeLayout>
